const assert = require('assert');

test('FridgeRepository functionality', () => {
    const fridgeRepository = new FridgeRepository();
    const testIngredient = new Ingredient('Test Ingredient', 1);

    fridgeRepository.addIngredient(testIngredient);
    assert.strictEqual(fridgeRepository.getIngredients().length, 1);
    assert.strictEqual(fridgeRepository.getIngredients()[0].name, 'Test Ingredient');

    fridgeRepository.removeIngredient(testIngredient);
    assert.strictEqual(fridgeRepository.getIngredients().length, 0);
});